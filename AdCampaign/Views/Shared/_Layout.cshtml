<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reklam Merkezi</title>
    
    <!-- Tailwind CSS Play CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#7B61FF',
                        primary600: '#6A4CFE',
                        text: '#3A3A52',
                        muted: '#A6A6C8',
                        bg: '#F6F7FB'
                    },
                    boxShadow: {
                        card: '0 16px 40px rgba(123,97,255,.15)'
                    },
                    borderRadius: {
                        xl2: '18px',
                        input: '14px'
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
    
    <!-- Heroicons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/heroicons@2.0.18/24/outline/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/heroicons@2.0.18/24/solid/index.css">
    
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    
    <!-- Custom CSS Variables -->
    <style>
        :root {
            --bg: #F6F7FB;
            --card: #FFF;
            --primary: #7B61FF;
            --text: #3A3A52;
            --muted: #A6A6C8;
        }
        html {
            font-family: Inter, system-ui, sans-serif;
        }
        .heading {
            font-family: Poppins, Inter, sans-serif;
        }
        
        /* Custom animations */
        .animate-shimmer {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
        }
        
        .animate-fadeIn {
            animation: fadeIn 0.3s ease-out forwards;
        }
        
        @@keyframes shimmer {
            0% { background-position: -200% 0; }
            100% { background-position: 200% 0; }
        }
        
        @@keyframes fadeIn {
            0% { 
                opacity: 0; 
                transform: translateY(-10px) scale(0.95);
            }
            100% { 
                opacity: 1; 
                transform: translateY(0) scale(1);
            }
        }
        
        /* Range slider styling */
        input[type="range"]::-webkit-slider-thumb {
            appearance: none;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background: #7B61FF;
            cursor: pointer;
            border: 4px solid white;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }
        
        input[type="range"]::-webkit-slider-track {
            height: 6px;
            border-radius: 3px;
            background: #E5E7EB;
        }
    </style>
    
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body class="bg-bg min-h-screen">
    <!-- Header -->
    <partial name="_Header" />
    
    <!-- Main Content -->
    <main class="pb-24">
        @RenderBody()
    </main>
    
    <!-- Footer Stepper -->
    <partial name="_Stepper" />
    
    <!-- Toast Container -->
    <div id="toast-container" class="fixed top-4 right-4 z-50"></div>
    
    <!-- React CDNs -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@@babel/standalone/babel.min.js"></script>
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.0/dist/chart.umd.js"></script>
    
    <!-- jQuery (optional, for some utilities) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/tr.js"></script>
    
    <!-- AutoNumeric -->
    <script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>
    
    <!-- App Scripts -->
    <script src="~/js/app.js"></script>
    <script src="~/js/data.js"></script>
    <script src="~/js/charts.js"></script>
    
    <!-- Load React Components -->
    <script type="text/babel" src="~/js/components/TagInput.jsx"></script>
    <script type="text/babel" src="~/js/components/BudgetSlider.jsx"></script>
    <script type="text/babel" src="~/js/components/ForecastCharts.jsx"></script>
    <script type="text/babel" src="~/js/components/SkeletonBlock.jsx"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>