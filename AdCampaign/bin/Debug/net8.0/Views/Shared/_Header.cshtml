<!-- Header Component -->
<header class="sticky top-0 z-40 backdrop-blur bg-white/80 shadow-sm border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Left side: Breadcrumb -->
            <div class="flex items-center space-x-3">
                <div class="flex items-center space-x-2">
                    <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    <h1 class="text-lg font-semibold text-text heading">Reklam Merkezi</h1>
                </div>
                
                <!-- Breadcrumb Trail -->
                <nav class="hidden sm:flex items-center space-x-2 text-sm text-muted">
                    <span id="breadcrumb-path"></span>
                </nav>
            </div>
            
            <!-- Center: Search placeholder -->
            <div class="hidden md:flex items-center flex-1 max-w-lg mx-8">
                <div class="relative w-full">
                    <input type="text" 
                           placeholder="Proje ara..." 
                           class="w-full px-4 py-2 pl-10 text-sm border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                    <svg class="absolute left-3 top-2.5 w-4 h-4 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            
            <!-- Right side: Actions and Avatar -->
            <div class="flex items-center space-x-4">
                <!-- Notifications -->
                <button class="relative p-2 text-muted hover:text-text transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zm-5-15v5H5l5-5z"/>
                    </svg>
                    <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full"></span>
                </button>
                
                <!-- New Project Button -->
                <button class="btn-primary px-4 py-2 rounded-xl2 text-white text-sm font-medium hover:bg-primary600 transition-all hover:-translate-y-0.5">
                    <span class="hidden sm:inline">+ Yeni Proje</span>
                    <span class="sm:hidden">+</span>
                </button>
                
                <!-- Avatar -->
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-gradient-to-br from-primary to-primary600 rounded-full flex items-center justify-center">
                        <span class="text-white text-sm font-medium">U</span>
                    </div>
                    <div class="hidden lg:block">
                        <p class="text-sm font-medium text-text">Kullanıcı</p>
                        <p class="text-xs text-muted">kullanici@example.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    // Update breadcrumb based on current route
    document.addEventListener('DOMContentLoaded', function() {
        const breadcrumb = document.getElementById('breadcrumb-path');
        const path = window.location.pathname;
        let breadcrumbText = '';
        
        switch(path) {
            case '/':
                breadcrumbText = 'Ana Sayfa';
                break;
            case '/analyze':
                breadcrumbText = 'Ana Sayfa > Analiz';
                break;
            case '/setup/summary':
                breadcrumbText = 'Ana Sayfa > Analiz > Kurulum';
                break;
            case '/setup/competitors':
                breadcrumbText = 'Ana Sayfa > Analiz > Kurulum > Rakipler';
                break;
            case '/adsets':
                breadcrumbText = 'Ana Sayfa > Analiz > Kurulum > Reklam Setleri';
                break;
            case '/forecast':
                breadcrumbText = 'Ana Sayfa > Analiz > Kurulum > Reklam Setleri > Tahmin';
                break;
            default:
                breadcrumbText = 'Ana Sayfa';
        }
        
        if (breadcrumb) {
            breadcrumb.textContent = breadcrumbText;
        }
    });
</script>